<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_schadenaufnahme">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="col-12">
                            <h4>
                                Test Schadenaufnahme
                            </h4>
                        </div>
                        <table class="table table-borderless table-sm mt16 ml16">
                            <tr>
                                <td style="width:200px;">
                                    <strong>Customer: </strong>
                                </td>

                            </tr>
                        </table>
                        
                    </div>
                </t>
            </t>
        </t>
    </template>

    <report
        id="schadenaufnahme"
        model="project.task"
        string="Schadenaufnahme"
        report_type="qweb-pdf"
        name="my_module.report_schadenaufnahme"
        file="my_module.report_schadenaufnahme"
        groups="base.group_system,base.group_user"
        print_report_name="(object.name + '_test_report.pdf')"
        menu="True"
        attachment="(object.name + '_test_report.pdf')"
        attachment_use="True"
        

    />

</odoo>