    <record id="aej_project_task_view" model="ir.ui.view">
        <field name="name">aej.document.inherit.project</field>
        <field name="model">project.task</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//form[1]//notebook" position="before">
            <group name="studio_group_3LIKq">
              <group name="studio_group_3LIKq_left">
                <field name="customer_name" string="Kunde"/>
                <field name="license_plate" string="Kennzeichen"/>
                <field name="date_off_view" string="Besichtigunsdatum"/>
                <field name="place_offview" string="Besichtigunsort"/>
              </group>
              <group name="studio_group_3LIKq_right">
                <field name="agent" string="Vermittler"/>
                <field name="report_number" string="GA-Nr.:"/>
                <field name="day_offcrash" string="Schadenstag"/>
                <field name="place_offcrash" string="Schadensort"/>
              </group>
            </group>
            <notebook name="studio_notebook_GE5Aq">
              <page string="Schadenshergang" name="studio_page_GE5Aq">
                <group name="studio_group_GE5Aq">
                  <group name="studio_group_GE5Aq_left">
                    <field name="course_park" string="Einparken"/>
                    <field name="park_out" string="Ausparken"/>
                    <field name="course_change_lane" string="Spurwechsel"/>
                    <field name="rear_end_collision" string="Auffahrunfall"/>
                  </group>
                  <group name="studio_group_GE5Aq_right">
                    <field name="vorfahrt" string="Vorfahrt"/>
                    <field name="ast_park" string="AST Geparkt"/>
                    <field name="ast_standing" string="AST Stand"/>
                  </group>
                </group>
                <group name="studio_group_VTe30">
                  <field name="others" string="Sonstiges"/>
                  <field name="other_text" attrs="{&quot;invisible&quot;: [[&quot;others&quot;,&quot;=&quot;,False]], &quot;required&quot;: [[&quot;others&quot;,&quot;=&quot;,True]]}" string=" "/>
                </group>
              </page>
              <page string="Auftragsgeber" name="customer">
                <group name="customer">
                  <group name="customer_left">
                    <field name="client_fam_name" string="Nachname"/>
                      <field name="client_first_name" string="Vorname"/>
                    <field name="client_post_code" string="PLZ"/>
                      <field name="client_local" string="Ort"/>
                    <field name="client_e_mail" string="E-Mail"/>
                    <field name="client_phone" string="Telefon"/>
                  </group>
                  <group name="customer_right">
                    <field name="client_lawyer" string="Rechtsanwalt"/>
                    <field name="client_name_lawyer" string="Name Rechtsanwalt" attrs="{&quot;invisible&quot;: [[&quot;client_lawyer&quot;,&quot;=&quot;,False]], &quot;required&quot;: [[&quot;client_lawyer&quot;,&quot;=&quot;,True]]}"/>
                    <field name="client_insurance" string="Rechtsschutzversicherung"/>
                    <field name="name_insurance" string="Rechtschutzversicherung" attrs="{&quot;invisible&quot;: [[&quot;client_insurance&quot;,&quot;=&quot;,False]], &quot;required&quot;: [[&quot;client_insurance&quot;,&quot;=&quot;,True]]}"/>
                    <field name="client_service_book" string="Service- Scheckheft"/>
                    <field name="dekra" string=" " attrs="{&quot;invisible&quot;: [[&quot;client_service_book&quot;,&quot;=&quot;,True]], &quot;required&quot;: [[&quot;client_service_book&quot;,&quot;=&quot;,False]]}"/>
                  </group>
                </group>
              </page>
              <page string="Versicherungsnehmer" name="policyholder">
                <group name="policyholder">
                  <group name="policyholder_left">
                    <field name="policy_holder_fam_name" string="Nachname"/>
                    <field name="policy_holder_first_name" string="Vorname"/>
                    <field name="policy_holder_post_code" string="PLZ"/>
                    <field name="policy_holder_local" string="Ort"/>
                    <field name="policy_holder_streat" string="Strasse"/>
                  </group>
                  <group name="policyholder_right">
                    <field name="policy_name" string="Versicherung"/>
                    <field name="policy_number" string="Versicherungsnummer"/>
                  </group>
                </group>
              </page>
              <page string="Besichtigunszustand" name="inspection_condition">
                <group name="inspection_condition">
                  <group name="inspection_condition_left">
                    <field name="selection_dismantle"/>
                    <field name="selection_driveable"/>
                    <field name="selection_driving_safety" string="Verkehrssicher?"/>
                  </group>
                  <group name="inspection_condition_right">
                    <field name="inspection_note" string="Notiz Besichtigungszustand"/>
                  </group>
                </group>
              </page>
              <page string="Fahrzeugzustand" name="vehicle_condition">
                <group name="vehicle_condition">
                  <group name="vehicle_condition_left" string="Allgemein">
                    <field name="selection_good" string="sehr gut/gut"/>
                    <field name="selection_average" string="über/durchschnittlich"/>
                    <field name="sehr_gepflegt" string="sehr gepflegt/gepflegt"/>
                    <field name="selection_age_performance" string="Alter und Laufl. entsprechend"/>
                  </group>
                  <group name="vehicle_condition_right" string="Karosserie">
                    <field name="selection_car_good" string="sehr gut/gut"/>
                    <field name="selection_car_average" string="über/durchschnittlich"/>
                    <field name="selection_car_condition" string="sehr gepflegt/gepflegt"/>
                    <field name="selection_car_usable_dirty" string="Fahrzeug einsatzb. verschmutzt"/>
                  </group>
                </group>
              </page>
              <page string="Bereifung" name="set_of_tires">
                <group name="set_of_tires">
                  <group name="set_of_tires_left" string="Vorne">
                    <field name="front_dimension"/>
                    <field name="front_index" string="Index"/>
                    <field name="front_manufacturer" string="Fabrikant"/>
                    <field name="front_wheel_type" string="Reifenart"/>
                    <field name="front_tread_depth" string="Profiltiefe"/>
                  </group>
                  <group name="set_of_tires_right" string="Hinten">
                    <field name="back_dimension" string="Dimension"/>
                    <field name="back_index" string="Index"/>
                    <field name="back_manufacturer" string="Fabrikant"/>
                    <field name="back_wheel_type"/>
                    <field name="back_tread_depth"/>
                  </group>
                </group>
              </page>
              <page string="Vorschäden" name="previous_damage">
                <group name="previous_damage">
                  <group name="previous_damage_left">
                    <field name="pre_damage" string="Vorschäden"/>
                  </group>
                  <group name="previous_damage_right">
                    <field name="unrepaired_damage" string="Unreparierte Schäden (Altschäden)"/>
                  </group>
                </group>
              </page>
              <page string="Unterschrift" name="signature">
                <group name="signature">
                  <group name="signature">
                    <field widget="signature" name="signature" string="Unterschrift"/>
                  </group>
                </group>
              </page>
            </notebook>
          </xpath>
            </data>
        </field>
    </record>
